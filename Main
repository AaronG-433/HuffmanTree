import java.io.File;
import java.io.FileNotFoundException;

public class Main
{
    public static void main (String args[]) throws FileNotFoundException, Exception
    {
        HuffmanCoding tree = new HuffTree();
        HuffmanCoding temp = new HuffTree();

        //getFrequencies test
        File inputFile = new File("test.txt");
        System.out.println(tree.getFrequencies(inputFile));


        //buildTree test
        temp = tree.buildTree(inputFile);
        System.out.println("Output temp traverse\n"+temp.traverseHuffmanTree(tree.buildTree(inputFile)));

        //encode test
        String output = temp.encodeFile(inputFile, tree.buildTree(inputFile));
        System.out.println(output);

        //decode test
        String test = temp.decodeFile(output, tree.buildTree(inputFile));
        System.out.println(test);
    }
}
